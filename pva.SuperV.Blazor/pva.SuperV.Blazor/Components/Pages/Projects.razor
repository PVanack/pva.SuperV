@page "/projects"

<PageTitle>Projects</PageTitle>

<script>
	window.saveFile = async (filename, Content) => {
		let link = document.createElement('a');
		link.download = filename;
		link.href = "data:text/plain;charset=utf-8," + encodeURIComponent(Content)
		document.body.appendChild(link);
		link.click();
		document.body.removeChild(link);
	}
</script>
<style>
	.selected {
		background-color: #1E88E5 !important;
	}

		.selected > td {
			color: white !important;
		}

			.selected > td .mud-input {
				color: white !important;
			}
</style>

<h1>Projects</h1>
<MudTable T="ProjectModel" @ref="projectsTable" ServerData="ServerReload" RowClassFunc="SelectedRowClassFunc" OnRowClick="RowClickedEvent" Bordered=true Striped=true>
	<ToolBarContent>
		<MudButtonGroup Color="Color.Primary" Size="Size.Small" Variant="Variant.Outlined">
			<MudButton StartIcon="@Icons.Material.Filled.Add"
					   OnClick="@CreateProject">
				Create project
			</MudButton>
			<MudFileUpload T="IBrowserFile" FilesChanged="LoadProjectFromDefinition">
				<ActivatorContent>
					<MudButton Color="Color.Primary" StartIcon="@Icons.Material.Filled.FileOpen">
						Load project"
					</MudButton>
				</ActivatorContent>
			</MudFileUpload>
		</MudButtonGroup>
		<MudButtonGroup Color="Color.Primary" Size="Size.Small" Variant="Variant.Outlined">
			<MudButton StartIcon="@Icons.Material.Filled.Edit" OnClick="@EditProject">
				Edit project
			</MudButton>
			<MudButton StartIcon="@Icons.Material.Filled.DesignServices"
					   hidden="@(SelectedProject == null || !SelectedProject.Runnable)" OnClick="@((e)=> CreateWipProjectFromRunnable(SelectedProject!.Id))">
				Create WIP project
			</MudButton>
			<MudButton StartIcon="@Icons.Material.Filled.Save"
					   hidden="@(SelectedProject == null || !SelectedProject.Runnable)" OnClick="@((e) => SaveProjectInstances(SelectedProject!))">
				Save project instances
			</MudButton>
			<MudFileUpload T="IBrowserFile" FilesChanged="@((e) => LoadProjectInstancesFromFile(e, SelectedProject!))">
				<ActivatorContent>
					<MudButton StartIcon="@Icons.Material.Filled.FileOpen"
							   hidden="@(SelectedProject == null || !SelectedProject.Runnable)">
						Load project instances
					</MudButton>
				</ActivatorContent>
			</MudFileUpload>
			<MudButton StartIcon="@Icons.Material.Filled.MiscellaneousServices"
					   hidden="@(SelectedProject == null || SelectedProject.Runnable)" OnClick="@((e)=> BuildWipProject(SelectedProject!.Id))">
				Build project
			</MudButton>
			<MudButton StartIcon="@Icons.Material.Filled.Save"
					   hidden="@(SelectedProject == null || SelectedProject.Runnable)" OnClick="@((e)=> SaveProjectDefinitions(SelectedProject!))">
				Save project definitions
			</MudButton>
			<MudButton IconColor="Color.Secondary" StartIcon="@Icons.Material.Filled.DeleteForever"
					   hidden="@(SelectedProject == null)" OnClick="@((e)=> DeleteProject(SelectedProject!.Id))">
				Delete project
			</MudButton>
		</MudButtonGroup>
		<MudSpacer />
		<MudButtonGroup Color="Color.Primary" Size="Size.Small" Variant="Variant.Outlined">
			<MudButton StartIcon="@Icons.Material.Filled.DataObject"
					   hidden="@(SelectedProject == null || !SelectedProject.Runnable)" Href=@($"/instances/{SelectedProject?.Id}")>
				Instances
			</MudButton>
			<MudButton StartIcon="@Icons.Material.Filled.Class"
					   hidden="@(SelectedProject == null || SelectedProject.Runnable)" Href=@($"/classes/{SelectedProject?.Id}")>
				Classes
			</MudButton>
			<MudButton StartIcon="@Icons.Material.Filled.FormatListNumbered"
					   hidden="@(SelectedProject == null || SelectedProject.Runnable)" Href=@($"/field-formatters/{SelectedProject?.Id}")>
				Field formatters
			</MudButton>
			<MudButton StartIcon="@Icons.Material.Filled.Storage"
					   hidden="@(SelectedProject == null || SelectedProject.Runnable)" Href=@($"/history-repositories/{SelectedProject?.Id}")>
				History repositories
			</MudButton>
		</MudButtonGroup>
		<MudSpacer />
		<MudTextField @bind-Value="projectNameSearchString" Placeholder="Search" Clearable=true Immediate=true TextChanged="Search"
					  Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
	</ToolBarContent>
	<ColGroup>
		<col />
		<col />
		<col />
		<col style="width:25px;" />
	</ColGroup>
	<HeaderContent>
		<MudTh Style="text-align:center">Name</MudTh>
		<MudTh Style="text-align:center">Description</MudTh>
		<MudTh Style="text-align:center">Version</MudTh>
		<MudTh Style="text-align:center">State</MudTh>
	</HeaderContent>
	<RowTemplate>
		<MudTd DataLabel="Name">@context.Name</MudTd>
		<MudTd DataLabel="Description">@context.Description</MudTd>
		<MudTd DataLabel="Version">@context.Version</MudTd>
		<MudTd DataLabel="Runnable" Style="text-align:center">
			<MudIcon Icon="@(context.Runnable ? Icons.Material.Filled.MiscellaneousServices : Icons.Material.Filled.DesignServices)"
					 Title="@(context.Runnable ? "Runnable" : "WIP")" />
		</MudTd>
	</RowTemplate>
	<NoRecordsContent>
		<MudText>No matching records found</MudText>
	</NoRecordsContent>
	<LoadingContent>
		<MudText>Loading...</MudText>
	</LoadingContent>
	<PagerContent>
		<MudTablePager PageSizeOptions="@Constants.pageSizeOptions"
					   RowsPerPageString="@Constants.rowsPerPageString"
					   InfoFormat="@Constants.infoFormat"
					   AllItemsText="@Constants.allItemsText"
					   HorizontalAlignment="@Constants.horizontalAlignment"
					   HideRowsPerPage="@Constants.hideRowsPerPage"
					   HidePageNumber="@Constants.hidePageNumber"
					   HidePagination="@Constants.hidePagination" />
	</PagerContent>
</MudTable>
