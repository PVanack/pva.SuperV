@inherits LayoutComponentBase

<MudThemeProvider @ref="@themeProvider" @bind-IsDarkMode="@isDarkMode" Theme="theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
	<MudAppBar>
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => ToggleDrawer())" />
		<MudText Typo="Typo.h6">pva.SuperV</MudText>
	</MudAppBar>
	<MudDrawer Variant="@DrawerVariant.Persistent" @bind-Open="@drawerOpen">
		<NavMenu />
	</MudDrawer>
	<MudMainContent>
		<MudBreadcrumbs @ref="BreadcrumbsComponent" Items="State.Breadcrumbs" Separator=">"></MudBreadcrumbs>
		@Body
	</MudMainContent>
</MudLayout>
